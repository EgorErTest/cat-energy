{
  "extends": "stylelint-config-htmlacademy",
  "rules": {
    "declaration-no-important": null,
    "indentation": [2, {"ignore": ["inside-parens"]}],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "for",
          "each",
          "if",
          "else",
          "include",
          "mixin"
        ]
      }
    ],
    "max-nesting-depth": null
  }
}
